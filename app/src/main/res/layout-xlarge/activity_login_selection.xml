<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login_selection1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.brainiacs.seandroidapp.LoginSelectionActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:weightSum="1"
        android:background="@color/Blue"
        tools:ignore="UselessParent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            app:srcCompat="@drawable/logo"
            android:id="@+id/imageView5"
            android:layout_weight="0.12"
            tools:ignore="ContentDescription,InefficientWeight" />

        <Button
            android:text="@string/student_login"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:id="@+id/student_login"
            android:layout_marginTop="@android:dimen/notification_large_icon_height"
            android:padding="@dimen/activity_vertical_margin"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:background="@android:color/black"
            android:textColor="@android:color/background_light"
            android:textSize="36sp" />

        <Button
            android:text="@string/teacher_login"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:id="@+id/teacher_login"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:textColor="@android:color/background_light"
            android:background="@android:color/black"
            android:textSize="36sp" />
    </LinearLayout>
</RelativeLayout>
